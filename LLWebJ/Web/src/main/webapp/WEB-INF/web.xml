<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Lay Leadership Web App</display-name>
  <resource-env-ref>
    <resource-env-ref-name>BeanManager</resource-env-ref-name>
    <resource-env-ref-type>
      javax.enterprise.inject.spi.BeanManager
    </resource-env-ref-type>
  </resource-env-ref>
  <resource-ref>
    <description>Resource reference to a factory for java.sql.Connection
      instances that may be used for talking to the Lay Leadership "Contact Tasks"
      database that is configured in the &lt;Context&gt;
      configuration for the web application.
    </description>
    <res-ref-name>
      jdbc/LayLeadership
    </res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
